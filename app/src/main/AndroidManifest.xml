<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.neojunhao.certisme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".createAccountActivity"
            android:label="Create Account"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".createFacialActivity"
            android:label="Facial Recognition"
            android:parentActivityName=".createAccountActivity" />
        <activity
            android:name=".createIrisActivity"
            android:label="Iris Recognition"
            android:parentActivityName=".createFacialActivity" />
        <activity
            android:name=".createCompleteActivity"
            android:label=" " />

        <activity
            android:name=".loginAccountActivity"
            android:label="Login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".loginFacialActivity"
            android:label="Facial Recognition"
            android:parentActivityName=".loginAccountActivity" />
        <activity
            android:name=".loginIrisActivity"
            android:label="Iris Recognition"
            android:parentActivityName=".loginFacialActivity"/>

        <activity
            android:name=".mainMenuActivity"
            android:label="Main Menu"/>
        <activity
            android:name=".settingsActivity"
            android:label="Settings"
            android:parentActivityName=".mainMenuActivity"/>
    </application>

</manifest>